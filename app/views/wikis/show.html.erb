<div class="row">
  <div class="col-md-8">
    <div class="media">
      <div class="media-body">
        <h1 class="mt-0"><%= @wiki.title %></h1>
        <small>Last Updated at: <%= Time.at(@wiki.updated_at) %></small>
        <p><%= markdown(@wiki.body) %></p>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <%= button_to "Edit Wiki", edit_wiki_path, method: :get, class: 'btn btn-success m-1' %>
    <%= button_to "Delete Wiki", wiki_path(@wiki), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }, class: 'btn btn-warning m-1' %>
  </div>
  <% if @user == current_user  %>
    <h5>Contributors</h5>
    <% @wiki.collaborators.each do |collaborator| %>
      <p><%= collaborator.user.email %></p>
      <% if user = @wiki.collaborators.user.last %>
              <%= form_for [user] do |f| %>
                <% if user.errors.any? %>
                  <div class="alert alert-danger">
                    <h4><%= pluralize(users.errors.count, "error") %>.</h4>
                    <ul>
                      <% users.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>
                <%= form_group_tag(user.errors[:email]) do %>
                  <%= f.label :email %>
                  <%= f.text_field :email, class: 'form-control', placeholder: "Add collaborator's email" %>
                <% end %>
                <div class="form-group">
                  <%= f.submit "Save", class: 'btn-small btn-success' %>
                </div>
              <% end %>
      <% end %>
    <% end %>
  <% end %>
  
</div>